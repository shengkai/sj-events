{% extends "SonataUserBundle::layout.html.twig" %}

{% block content %}
    <div class="container">
         <div class="row">
            {% include 'SonataCoreBundle:FlashMessage:render.html.twig' %}
            <div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
                <h2>{{ 'registration.register_heading'|trans({}, 'FOSUserBundle') }}</h2>
                <p>{{'registration.register_message'|trans({}, 'FOSUserBundle')|raw}}</p>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
                <div class="panel panel-success">
                    <div class="panel-heading">
                        <h2 class="panel-title">{{ 'title_user_registration'|trans({}, 'SonataUserBundle') }}</h2>
                    </div>
                    <div class="panel-body">
                        <form action="" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register form-horizontal">
                            {{ form_widget(form) }}
                            <div class="form-actions">
                                <input type="submit" value="{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}" class="btn btn-success pull-right" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br/><br/><br/><br/>
{% endblock %}

{% block javascript %}
{% endblock %}